<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <PackageMsBuildContentFilesPath>$(MSBuildThisFileDirectory)..\App_Plugins\BulkUpload\**\*.*</PackageMsBuildContentFilesPath>
  </PropertyGroup>

  <Target Name="CopyPackageMsBuildAssets" BeforeTargets="Build">
    <ItemGroup>
      <PackageMsBuildContentFiles Include="$(PackageMsBuildContentFilesPath)" />
    </ItemGroup>
    <Message Text="Copying BulkUpload files: $(PackageMsBuildContentFilesPath) - #@(PackageMsBuildContentFiles->Count()) files" Importance="high" />
    <Copy SourceFiles="@(PackageMsBuildContentFiles)" DestinationFiles="@(PackageMsBuildContentFiles->'$(MSBuildProjectDirectory)\App_Plugins\BulkUpload\%(RecursiveDir)%(Filename)%(Extension)')" SkipUnchangedFiles="true" />
  </Target>

  <Target Name="ClearPackageMsBuildAssets" BeforeTargets="Clean">
    <ItemGroup>
      <PackageMsBuildDir Include="$(MSBuildProjectDirectory)\App_Plugins\BulkUpload\" />
    </ItemGroup>
    <Message Text="Clear old BulkUpload data" Importance="high" />
    <RemoveDir Directories="@(PackageMsBuildDir)" />
  </Target>
</Project>
